@model AttendanceCheck.ViewModels.GroupViewModel

<form id="groupForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="GroupId" />
    <div class="form-group">
        <label asp-for="GroupName" class="control-label"></label>
        <input asp-for="GroupName" class="form-control" />
        <span id="validation" asp-validation-for="GroupName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="btnSaveOrUpdate" onclick="saveOrUpdate()" type="submit" class="btn btn-primary">Save</button>
    </div>
</form>